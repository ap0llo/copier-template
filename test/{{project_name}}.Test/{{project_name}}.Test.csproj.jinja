<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
  {%- if ';' in target_frameworks %}
    <TargetFrameworks>{{ target_frameworks }}</TargetFrameworks>
  {%- else %}
    <TargetFramework>{{ target_frameworks }}</TargetFramework>
  {%- endif %}
  </PropertyGroup>

  <ItemGroup>
    {% if project_type == 'Cake Addin' -%}
    <PackageReference Include="Cake.Testing" Version="4.0.0" />
    {% endif -%}
    <PackageReference Include="Microsoft.NET.Test.Sdk" Version="17.10.0" />
    <PackageReference Include="xunit" Version="2.9.0" />
    <PackageReference Include="xunit.runner.visualstudio" Version="2.8.2" PrivateAssets="all" />
    <PackageReference Include="coverlet.collector" Version="6.0.2" PrivateAssets="all" />    
    {% if test_validate_public_api -%}
    <PackageReference Include="PublicApiGenerator" Version="11.1.0" />
    <PackageReference Include="Verify.Xunit" Version="26.0.1" />
    {% endif -%}
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="../../src/{{project_name}}/{{project_name}}.csproj" />
  </ItemGroup>

</Project>
